RewriteEngine On

# 強制HTTPS（生產環境使用）
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 移除www（可選）
# RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
# RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# 移除尾部斜線
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)/$ /$1 [L,R=301]

# 頁面路由
RewriteRule ^about/?$ pages/about.php [L]
RewriteRule ^about-us/?$ pages/about.php [L]
RewriteRule ^login-page/?$ login-page.php [L]
RewriteRule ^courses/?$ pages/courses.php [L]
RewriteRule ^courses/professional-coaching/?$ pages/courses/professional-coaching.php [L]
RewriteRule ^courses/team-coaching/?$ pages/courses/team-coaching.php [L]
RewriteRule ^courses/parent-coaching/?$ pages/courses/parent-coaching.php [L]
RewriteRule ^courses/enneagram/?$ pages/courses/enneagram.php [L]
RewriteRule ^services/?$ services.php [L]
RewriteRule ^services/personal/?$ pages/services/personal.php [L]
RewriteRule ^services/enterprise/?$ pages/services/enterprise.php [L]
RewriteRule ^coach-services/?$ pages/coach-services.php [L]
RewriteRule ^enterprise-services/?$ pages/enterprise-services.php [L]
RewriteRule ^coach-alliance/?$ pages/coach-alliance.php [L]
RewriteRule ^alliance/?$ pages/alliance.php [L]
RewriteRule ^contact/?$ pages/contact.php [L]
RewriteRule ^register/?$ register.php [L]
RewriteRule ^login/?$ login.php [L]
RewriteRule ^forgot-password/?$ forgot-password.php [L]
RewriteRule ^reset-password/?$ reset-password.php [L]
RewriteRule ^profile/?$ profile.php [L]
RewriteRule ^my-courses/?$ my-courses.php [L]
RewriteRule ^course-learning/?$ course-learning.php [L]
RewriteRule ^demo-video-setup/?$ demo-video-setup.php [L]
RewriteRule ^community/?$ community.php [L]
RewriteRule ^search/?$ search.php [L]

# 根目錄 PHP 文件的乾淨 URL 支持
RewriteRule ^index/?$ index.php [L]

# 管理員後台路由
RewriteRule ^admin/?$ admin/index.php [L]
RewriteRule ^admin/users/?$ admin/users.php [L]
RewriteRule ^admin/courses/?$ admin/courses.php [L]
RewriteRule ^admin/services/?$ admin/services.php [L]
RewriteRule ^admin/content/?$ admin/content.php [L]
RewriteRule ^admin/settings/?$ admin/settings.php [L]
RewriteRule ^admin/logout/?$ admin/logout.php [L]

# 用戶登出
RewriteRule ^logout/?$ logout.php [L]

# 登入處理
RewriteRule ^login-handler/?$ login-handler.php [L]

# 課程詳情頁面
RewriteRule ^course/([^/]+)/?$ pages/course-detail.php?slug=$1 [L,QSA]

# 安全設置
<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "*.env">
    Order allow,deny
    Deny from all
</Files>

# 緩存設置
<IfModule mod_expires.c>
    ExpiresActive on
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# 壓縮設置
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# 安全頭
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>
